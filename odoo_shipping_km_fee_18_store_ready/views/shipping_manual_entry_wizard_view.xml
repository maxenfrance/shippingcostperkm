<odoo>
  <record id="view_manual_shipping_wizard_form" model="ir.ui.view">
    <field name="name">shipping.manual.entry.wizard.form</field>
    <field name="model">shipping.manual.entry.wizard</field>
    <field name="arch" type="xml">
      <form string="Enter Shipping Data">
        <group>
          <field name="distance_km"/>
          <field name="duration_hours"/>
        </group>
        <footer>
          <button string="Add Shipping Fee" type="object" name="confirm_manual_shipping" class="btn-primary"/>
          <button string="Cancel" class="btn-secondary" special="cancel"/>
        </footer>
      </form>
    </field>
  </record>
</odoo>
